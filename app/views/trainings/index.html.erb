<h1 class='training-index-lists'>トレーニング一覧</h1>

<h1 class="tra-main-name"> chest muscles </h1>
     <% @trainings.each do |training| %>
   <% if training.muscle_part_id == 2%>
    <ul class='item-lists'>
            <li class='list'>
            <%= link_to training_path(training.id) do %>
        <div class='item-info'>
          <h3 class='training-name'>
            <%= training.training_name %>
          </h3>
            <% end %>
            <% end %>

        </div>
      </li>
      </ul>
      
      <% end %>


