<div class="manner-contents">
  <%= render "shared/second-header"%>


  <div class='manner-main'>
    <h2 class="manner-title">ウエイトトレーニングをするにあたって</h2>

    <div>
      <h3 class='manner-lists'> ジム利用のマナー </h3>
       <% @manners.each do |manner| %>

       

       <% if manner.genre_id == 2%>

         <div class='manner-info'>
       <ul>
       <li>
           <h3 class='manner-name'>
             <%= manner.title %>
           </h3>
           <h3 class='manner-description'>
             <%= simple_format(manner.description) %>
           </h3>
         </div>
      </li>
      </ul>
      
      <% if user_signed_in? && current_user.id == 1 %>
         <%= link_to "編集する", edit_manner_path(manner.id), method: :get, class: "manner-edit-destroy-btn" %>
          <%= link_to "削除する", manner_path(manner.id), method: :delete, class:"manner-edit-destroy-btn" %>
       <% end %>

      <% end %>
      <% end %>
    </div>


    <div>
      <h3 class='manner-lists'> ウエイトトレーニングの心得 </h3>
      <% @manners.each do |manner| %>
      <% if manner.genre_id == 3%>

        <div class='manner-info'>
      <ul>
        <li>
           <h3 class='manner-name'>
           <%= manner.title %>
           </h3>
           <h3 class='manner-description'>
             <%= manner.description %>
           </h3>
        </div>
      </li>
      </ul>

      <% if user_signed_in? && current_user.id == 1 %>
         <%= link_to "編集する", edit_manner_path(manner.id), method: :get, class: "manner-edit-destroy-btn" %>
          <%= link_to "削除する", manner_path(manner.id), method: :delete, class:"manner-edit-destroy-btn" %>
       <% end %>

      <% end %>
      <% end %>
    </div>
  </div>


    <a class="btn" href="/">トップページへ戻る</a>
  <%= render "shared/second-footer"%>
</div>
